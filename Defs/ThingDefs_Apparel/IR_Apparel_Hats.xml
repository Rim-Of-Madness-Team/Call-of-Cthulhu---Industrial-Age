<!-- Boater -->  
  <ThingDef ParentName="HatMakeableBase">
    <defName>Apparel_IndBoaterRed</defName>
    <label>boater hat</label>
	<description>A fashionable hat to ward off the sun in summer, gives off a warm and breezy style. Improves social impact.</description>

    <recipeMaker>
      <researchPrerequisite>ComplexClothing</researchPrerequisite>
    </recipeMaker>
    <graphicData>
      <texPath>Things/Apparel/Headwear/IndBoater</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <costList>
      <Cloth>25</Cloth>
    </costList>
    <statBases>
      <WorkToMake>6000</WorkToMake>
      <Mass>0.08</Mass>
      <Insulation_Heat>3</Insulation_Heat>
      <Beauty>7</Beauty>
      <Flammability>0</Flammability>
