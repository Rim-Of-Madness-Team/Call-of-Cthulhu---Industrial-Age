<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <JobDef>
	<defName>PlayGramophone</defName>
	<driverClass>ArkhamEstate.JobDriver_PlayGramophone</driverClass>
	<reportString>Winding up gramophone.</reportString>
  </JobDef>
	
  <JobDef>
    <defName>ListenToGramophone</defName>
    <driverClass>ArkhamEstate.JobDriver_ListenToGramophone</driverClass>
    <reportString>listening to gramophone.</reportString>
    <joyDuration>8000</joyDuration>
    <joyMaxParticipants>8</joyMaxParticipants>
    <joyGainRate>1.2</joyGainRate>
    <joyKind>Meditative</joyKind>
  </JobDef>

   <JobDef>
	<defName>PlayAndListenToGramophone</defName>
    <driverClass>ArkhamEstate.JobDriver_AutoPlayListenGramophone</driverClass>
    <reportString>listening to gramophone.</reportString>
    <joyDuration>8000</joyDuration>
    <joyMaxParticipants>8</joyMaxParticipants>
    <joyGainRate>1.2</joyGainRate>
    <joyKind>Meditative</joyKind>
  </JobDef> 
	
  <JobDef>
    <defName>TurnOffGramophone</defName>
    <driverClass>ArkhamEstate.JobDriver_TurnOffGramophone</driverClass>
    <reportString>turning off gramophone.</reportString>
  </JobDef>

  
</Defs>