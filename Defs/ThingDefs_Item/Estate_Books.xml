<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <ThingDef ParentName="Jecrell_Book">
	<defName>Jecrell_Book</defName>
	<label>book</label>
	<description>A collection of pages.</description>
    <graphicData>
      <texPath>Item/Resource/Journal/Jecrell_Book</texPath>
      <graphicClass>Graphic_Single</graphicClass>
	  	  <shaderType>CutoutComplex</shaderType>
      <onGroundRandomRotateAngle>15</onGroundRandomRotateAngle>
	  <drawSize>0.5</drawSize>
    </graphicData>	
	<costList>
	  <Jecrell_Wax>2</Jecrell_Wax>
      <Jecrell_PageBook>15</Jecrell_PageBook>
    </costList>	
	<comps>
      <li Class="CompProperties_Forbiddable"/>	
      <li>
        <compClass>CompQuality</compClass>
      </li>
      <li Class="CompProperties_Art">
        <nameMaker>ArtName_TypedBook</nameMaker>
        <descriptionMaker>ArtDescription_TypedBook</descriptionMaker>
      </li>
    </comps>
  </ThingDef>

  <ThingDef ParentName="Jecrell_Book">
	<defName>Jecrell_BookJournal</defName>
	<label>journal</label>
	<description>A collection of journal pages.</description>
    <graphicData>
      <texPath>Item/Resource/Journal/Jecrell_JournalBook</texPath>
      <graphicClass>Graphic_Single</graphicClass>
	  	  <shaderType>CutoutComplex</shaderType>
      <onGroundRandomRotateAngle>35</onGroundRandomRotateAngle>
	  <drawSize>0.5</drawSize>
    </graphicData>
	<costList>
	  <Jecrell_Wax>2</Jecrell_Wax>
      <Jecrell_PageJournal>15</Jecrell_PageJournal>
    </costList>		
	<comps>
      <li Class="CompProperties_Forbiddable"/>	
      <li>
        <compClass>CompQuality</compClass>
      </li>
      <li Class="CompProperties_Art">
        <nameMaker>ArtName_TypedJournal</nameMaker>
        <descriptionMaker>ArtDescription_TypedJournal</descriptionMaker>
      </li>
    </comps>
  </ThingDef>
  
  <ThingDef ParentName="Jecrell_Page">
	<defName>Jecrell_PageJournal</defName>
	<label>journal page</label>
	<description>Colonists can record their experiences on these pages.</description>
  </ThingDef>
  
  <ThingDef ParentName="Jecrell_Page">
	<defName>Jecrell_PageBook</defName>
	<label>book page</label>
	<description>Colonists can write stories on these pages.</description>
  </ThingDef>  
  
  <ThingDef Name="Jecrell_Book" Abstract="True">
    <thingClass>ArkhamEstate.ThingBook</thingClass>
    <category>Item</category>
    <pathCost>10</pathCost>
    <useHitPoints>true</useHitPoints>
	<selectable>true</selectable>	
    <drawGUIOverlay>true</drawGUIOverlay>
    <statBases>
      <WorkToMake>5000</WorkToMake>
      <MarketValue>0</MarketValue>	
      <MaxHitPoints>20</MaxHitPoints>
      <Flammability>1.0</Flammability>
      <DeteriorationRate>2</DeteriorationRate>
      <SellPriceFactor>0.25</SellPriceFactor>
    </statBases>
	<stuffCategories>
      <li>Leathery</li>
    </stuffCategories>
    <costStuffCount>5</costStuffCount>
    <altitudeLayer>Item</altitudeLayer>
    <alwaysHaulable>True</alwaysHaulable>
    <tickerType>Never</tickerType>
    <techLevel>Industrial</techLevel>
    <thingCategories>
      <li>Items</li>
	  <li>Estate_Books</li>
    </thingCategories>
    <inspectorTabs>
      <li>ITab_Art</li>
    </inspectorTabs>	
    <recipeMaker>
      <workSpeedStat>SculptingSpeed</workSpeedStat>
      <workSkill>Artistic</workSkill>
      <unfinishedThingDef>UnfinishedWriting</unfinishedThingDef>
      <soundWorking>Estate_SoundManualTypewriter</soundWorking>
      <recipeUsers>
        <li>Estate_TableTypewriter</li>
      </recipeUsers>
    </recipeMaker>
  </ThingDef>

  <ThingDef Name="Jecrell_Page" Abstract="True">
	<thingClass>ThingWithComps</thingClass>
      <graphicData>
      <texPath>Item/Resource/Journal/Jecrell_Journal</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <onGroundRandomRotateAngle>35</onGroundRandomRotateAngle>
    </graphicData>	
    <category>Item</category>
	<stackLimit>750</stackLimit>
    <pathCost>10</pathCost>
    <useHitPoints>true</useHitPoints>
	<selectable>true</selectable>	
    <drawGUIOverlay>true</drawGUIOverlay>
    <statBases>
      <WorkToMake>2800</WorkToMake>
      <MarketValue>0</MarketValue>	
      <MaxHitPoints>20</MaxHitPoints>
      <Flammability>2.0</Flammability>
      <DeteriorationRate>0.5</DeteriorationRate>
      <SellPriceFactor>0.25</SellPriceFactor>
    </statBases>
    <costList>
      <WoodLog>1</WoodLog>
    </costList>	
    <altitudeLayer>Item</altitudeLayer>
    <alwaysHaulable>True</alwaysHaulable>
    <tickerType>Never</tickerType>
    <techLevel>Industrial</techLevel>
    <thingCategories>
      <li>Items</li>
    </thingCategories>
    <recipeMaker>
      <workSpeedStat>ResearchSpeed</workSpeedStat>
      <workSkill>Intellectual</workSkill>
      <unfinishedThingDef>UnfinishedWriting</unfinishedThingDef>
      <soundWorking>Estate_SoundManualTypewriter</soundWorking>
      <recipeUsers>
        <li>Estate_TableTypewriter</li>
      </recipeUsers>
    </recipeMaker>
  </ThingDef>
  
</Defs>