<?xml version="1.0" encoding="utf-8" ?>
<Resources>

  <ThingDef Name="EstateResourceBase" Abstract="True">
    <thingClass>ThingWithComps</thingClass>
    <label>unspecified resource</label>
    <category>Item</category>
    <resourceReadoutPriority>Middle</resourceReadoutPriority>
    <useHitPoints>true</useHitPoints>
    <selectable>true</selectable>
    <altitudeLayer>Item</altitudeLayer>
    <stackLimit>75</stackLimit>
    <comps>
      <li Class="CompProperties_Forbiddable"/>
    </comps>
    <alwaysHaulable>true</alwaysHaulable>
    <drawGUIOverlay>true</drawGUIOverlay>
    <rotatable>false</rotatable>
    <pathCost>15</pathCost>
  </ThingDef>
  
  
  <ThingDef ParentName="EstateResourceBase">
    <defName>Jecrell_Wax</defName>
    <label>tallow wax</label>
    <description>Wax created from animal fat.</description>
    <graphicData>
      <texPath>Item/Resource/Wax/Jecrell_Wax</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <soundInteract>Standard_Drop</soundInteract>
    <soundDrop>Standard_Drop</soundDrop>
    <stackLimit>400</stackLimit>
    <statBases>
      <MaxHitPoints>70</MaxHitPoints>
      <MarketValue>3</MarketValue>
      <Flammability>1.0</Flammability>
      <DeteriorationRate>2</DeteriorationRate>
	  <WorkToMake>200</WorkToMake>
    </statBases>
    <intricate>true</intricate>
    <thingCategories>
      <li>Manufactured</li>
    </thingCategories>
  </ThingDef>


  <ThingDef ParentName="EstateBuildingBase">
    <defName>Jecrell_Chandelier</defName>
    <label>chandelier</label>
    <description>A metal or stone ceiling mount for wax candles to light an area. Can be automatically refueled with wax made from animal fats at a cooking station. Produces a very small amount of heat.</description>
    <category>Building</category>
    <graphicData>
      <texPath>Building/Misc/Chandelier/Jecrell_Chandelier</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <drawRotated>false</drawRotated>
      <shaderType>CutoutComplex</shaderType>	  
      <damageData>
        <rect>(0.35,0.35,0.3,0.3)</rect>
      </damageData>
    </graphicData>
    <stuffCategories>
      <li>Metallic</li>
      <li>Stony</li>
    </stuffCategories>
    <costStuffCount>100</costStuffCount>	
    <rotatable>false</rotatable>
    <altitudeLayer>MoteOverhead</altitudeLayer>
    <passability>Standable</passability>
	<pathCost>8</pathCost>
    <tickerType>Normal</tickerType>
    <drawerType>RealtimeOnly</drawerType>
    <fillPercent>0.15</fillPercent>
    <statBases>
      <MaxHitPoints>110</MaxHitPoints>
      <WorkToMake>2500</WorkToMake>
      <Flammability>0</Flammability>
	  <Beauty>15</Beauty>
    </statBases>
    <selectable>true</selectable>
    <costList>
      <Jecrell_Wax>20</Jecrell_Wax>
    </costList>
    <soundImpactDefault>BulletImpactGround</soundImpactDefault>
    <leaveResourcesWhenKilled>false</leaveResourcesWhenKilled>
    <resourcesFractionWhenDeconstructed>0</resourcesFractionWhenDeconstructed>
    <drawPlaceWorkersWhileSelected>true</drawPlaceWorkersWhileSelected>
    <comps>
      <li Class="CompProperties_Refuelable">
        <fuelConsumptionRate>2.2</fuelConsumptionRate>
        <fuelCapacity>20.0</fuelCapacity>
        <fuelConsumptionPerTickInRain>0.0006</fuelConsumptionPerTickInRain>
        <fuelFilter>
          <thingDefs>
            <li>Jecrell_Wax</li>
          </thingDefs>
        </fuelFilter>
        <destroyOnNoFuel>false</destroyOnNoFuel>
      </li>
      <li Class="CompProperties_Glower">
        <glowRadius>10</glowRadius>
        <glowColor>(252,187,113,0)</glowColor>
      </li>
      <li Class="CompProperties_HeatPusher">
        <heatPerSecond>0.5</heatPerSecond>
        <heatPushMaxTemperature>23</heatPushMaxTemperature>
      </li>
      <li Class="CompProperties_Fire4Overlay">
        <flameSize>0.3</flameSize>
        <offset>(0.22,0.1,0.25)</offset>
      </li>
      <li Class="CompProperties_Fire2Overlay">
        <flameSize>0.02</flameSize>
        <offset>(0,0.1,0.28)</offset>
      </li>
      <li Class="CompProperties_Fire3Overlay">
        <flameSize>0.2</flameSize>
        <offset>(-0.22,0.1,0.25)</offset>
      </li>
    </comps>
	<placeWorkers>
      <li>PlaceWorker_IsUnderRoof</li>
      <li>PlaceWorker_Heater</li>
    </placeWorkers>
    <designationCategory>Furniture</designationCategory>
  </ThingDef>


