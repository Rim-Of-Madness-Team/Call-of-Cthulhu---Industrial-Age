<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <ThingDef Name="EstateResourceBase" Abstract="True">
    <thingClass>ThingWithComps</thingClass>
    <label>unspecified resource</label>
    <category>Item</category>
    <resourceReadoutPriority>Middle</resourceReadoutPriority>
    <useHitPoints>true</useHitPoints>
    <selectable>true</selectable>
    <altitudeLayer>Item</altitudeLayer>
    <stackLimit>75</stackLimit>
    <comps>
      <li Class="CompProperties_Forbiddable"/>
    </comps>
    <alwaysHaulable>true</alwaysHaulable>
    <drawGUIOverlay>true</drawGUIOverlay>
    <rotatable>false</rotatable>
    <pathCost>15</pathCost>
  </ThingDef>
  
  
  <ThingDef ParentName="EstateResourceBase">
    <defName>Jecrell_Wax</defName>
    <label>tallow wax</label>
    <description>Wax created from animal fat.</description>
    <graphicData>
      <texPath>Item/Resource/Wax/Jecrell_Wax</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <soundInteract>Standard_Drop</soundInteract>
    <soundDrop>Standard_Drop</soundDrop>
    <stackLimit>400</stackLimit>
    <statBases>
      <MaxHitPoints>70</MaxHitPoints>
      <MarketValue>3</MarketValue>
      <Flammability>1.0</Flammability>
      <DeteriorationRate>2</DeteriorationRate>
	  <WorkToMake>200</WorkToMake>
    </statBases>
    <intricate>true</intricate>
    <thingCategories>
      <li>Manufactured</li>
    </thingCategories>
  </ThingDef>


  <ThingDef Name="UnfinishedWriting">
    <defName>UnfinishedWriting</defName>
    <thingClass>UnfinishedThing</thingClass>	
    <category>Item</category>	
    <label>unfinished writing</label>
    <graphicData>
      <texPath>Item/Unfinished/Jecrell_Page</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <altitudeLayer>Item</altitudeLayer>
    <useHitPoints>true</useHitPoints>
    <isUnfinishedThing>true</isUnfinishedThing>
    <selectable>true</selectable>
    <tradeability>Never</tradeability>
    <drawerType>RealtimeOnly</drawerType>
    <!-- For CompForbiddable -->
    <statBases>
      <MaxHitPoints>50</MaxHitPoints>
    </statBases>
    <comps>
      <li Class="CompProperties_Forbiddable"/>
    </comps>
    <alwaysHaulable>true</alwaysHaulable>
    <rotatable>false</rotatable>
    <pathCost>15</pathCost>
    <thingCategories>
      <li>Unfinished</li>
    </thingCategories>	
  </ThingDef>

  <ThingDef ParentName="UnfinishedWriting">
    <defName>UnfinishedWritingTablet</defName>
    <label>unfinished writing (tablet)</label>
    <graphicData>
      <texPath>Item/Unfinished/Jecrell_Tablet_Unfinished</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
  </ThingDef>
  
  <ThingDef ParentName="UnfinishedWriting">
    <defName>UnfinishedWritingScroll</defName>
    <label>unfinished writing (scroll)</label>
    <graphicData>
      <texPath>Item/Unfinished/Jecrell_Scroll_Unfinished</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
  </ThingDef>
  
  
</Defs>