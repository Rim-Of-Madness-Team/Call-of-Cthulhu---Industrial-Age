  <ThingDef Name="Journal_Page">
	<defName>Journal_Page</defName>
	<thingClass>ArkhamEstate.Item_JournalPage</thingClass>
	<label>journal page</label>
	<description>Colonists can record their experiences on these pages.</description>
    <graphicData>
      <texPath>Item/Resource/Journal/Jecrell_Journal</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <onGroundRandomRotateAngle>35</onGroundRandomRotateAngle>
    </graphicData>
    <soundInteract>InteractPistol</soundInteract>	
    <category>Item</category>
    <pathCost>10</pathCost>
    <useHitPoints>true</useHitPoints>
	<selectable>true</selectable>	
    <drawGUIOverlay>true</drawGUIOverlay>
    <statBases>
      <WorkToMake>2000</WorkToMake>
      <MarketValue>0</MarketValue>	
      <MaxHitPoints>20</MaxHitPoints>
      <Flammability>1.0</Flammability>
      <DeteriorationRate>2</DeteriorationRate>
      <SellPriceFactor>0.25</SellPriceFactor>
    </statBases>
    <costList>
      <WoodLog>1</WoodLog>
    </costList>	
    <altitudeLayer>Item</altitudeLayer>
    <alwaysHaulable>True</alwaysHaulable>
    <tickerType>Never</tickerType>
    <techLevel>Industrial</techLevel>
    <thingCategories>
      <li>Items</li>
    </thingCategories>
    <inspectorTabs>
      <li>ITab_Art</li>
    </inspectorTabs>	
    <comps>
      <li Class="CompProperties_Forbiddable"/>	
      <li>
        <compClass>CompQuality</compClass>
      </li>
      <li Class="CompProperties_Art">
        <nameMaker>ArtName_Typed</nameMaker>
        <descriptionMaker>ArtDescription_Typed</descriptionMaker>
      </li>
    </comps>
    <recipeMaker>
      <workSpeedStat>SculptingSpeed</workSpeedStat>
      <workSkill>Artistic</workSkill>
      <unfinishedThingDef>UnfinishedWriting</unfinishedThingDef>
      <soundWorking>Estate_SoundManualTypewriter</soundWorking>
      <recipeUsers>
        <li>Estate_TableTypewriter</li>
      </recipeUsers>
    </recipeMaker>
  </ThingDef>
  

