<?xml version="1.0" encoding="utf-8" ?>
<Defs>
  <ThingDef ParentName="EstateResourceBase">
    <defName>Estate_Coal</defName>
    <label>coal</label>
    <description>Doesn't look too nice, but it's good generator fuel.</description>
    <graphicData>
      <texPath>Things/Item/Resource/Coal</texPath>
      <graphicClass>Graphic_Random</graphicClass>
    </graphicData>
    <soundInteract>Metal_Drop</soundInteract>
    <soundDrop>Metal_Drop</soundDrop>
    <statBases>
      <MarketValue>2.0</MarketValue>
	  <MaxHitPoints>150</MaxHitPoints>
	  <Flammability>1.0</Flammability>
	  <Beauty>-2</Beauty>
    </statBases>
    <thingCategories>
      <li>ResourcesRaw</li>
    </thingCategories>
	 <stackLimit>500</stackLimit>
  </ThingDef>
  
  <ThingDef ParentName="EstateResourceBase">
    <defName>Estate_Copper</defName>
    <label>copper</label>
    <description>It is a soft, malleable, and ductile metal with very high thermal and electrical conductivity -- used for building structures, tools, and weapons.</description>
    <graphicData>
      <texPath>Things/Item/Resource/Copper</texPath>
      <graphicClass>Graphic_Random</graphicClass>
      <color>(255,255,255)</color>
    </graphicData>
    <soundInteract>Metal_Drop</soundInteract>
    <soundDrop>Metal_Drop</soundDrop>
    <statBases>
      <MarketValue>1.2</MarketValue>
      <Mass>0.3</Mass>
      <SharpDamageMultiplier>0.8</SharpDamageMultiplier>
      <BluntDamageMultiplier>0.9</BluntDamageMultiplier>
    </statBases>
    <useHitPoints>false</useHitPoints>
    <slagDef>ChunkSlagSteel</slagDef>
    <thingCategories>
      <li>ResourcesRaw</li>
    </thingCategories>
    <deepCommonality>1</deepCommonality>
    <stuffProps>
      <categories>
        <li>Metallic</li>
      </categories>
      <commonality>0.3</commonality>
      <constructEffect>ConstructMetal</constructEffect>
      <color>(220,101,51)</color>
      <soundImpactStuff>BulletImpactMetal</soundImpactStuff>
      <soundMeleeHitSharp>MeleeHit_Metal_Sharp</soundMeleeHitSharp>
      <soundMeleeHitBlunt>MeleeHit_Metal_Blunt</soundMeleeHitBlunt>
      <statFactors>
        <MaxHitPoints>1</MaxHitPoints>
        <Beauty>1.2</Beauty>
        <Flammability>0.1</Flammability>
        <MeleeWeapon_CooldownMultiplier>1</MeleeWeapon_CooldownMultiplier>
      </statFactors>
      <smeltable>true</smeltable>
    </stuffProps>
  </ThingDef>

</Defs>