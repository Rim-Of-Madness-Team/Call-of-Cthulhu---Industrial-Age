<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <ThingDef ParentName="EstateBuildingBase">
    <defName>Estate_Telegraph</defName>
    <label>telegraph</label>
    <thingClass>Building_CommsConsole</thingClass>
    <graphicData>
      <texPath>Things/Building/Misc/Telegraph</texPath>
      <graphicClass>Graphic_Multi</graphicClass>
      <shaderType>CutoutComplex</shaderType>	
      <drawSize>(2.5,1.5)</drawSize>
      <damageData>
        <rect>(0,0,3,1.8)</rect>
        <cornerBL>Damage/Corner</cornerBL>
        <cornerBR>Damage/Corner</cornerBR>
      </damageData>
    </graphicData>
    <defaultPlacingRot>South</defaultPlacingRot>		
    <altitudeLayer>Building</altitudeLayer>
    <passability>PassThroughOnly</passability>
    <blockWind>true</blockWind>
    <castEdgeShadows>true</castEdgeShadows>
    <fillPercent>1</fillPercent>
    <canOverlapZones>false</canOverlapZones>
    <rotatable>true</rotatable>
    <minifiedDef>MinifiedFurniture</minifiedDef>	
    <statBases>
      <MaxHitPoints>250</MaxHitPoints>
      <WorkToBuild>2200</WorkToBuild>
      <Flammability>1.0</Flammability>
      <Mass>30</Mass>	  
    </statBases>
    <description>The telegraph allows communication with remote traders as well as other factions for trade and diplomacy.</description>
    <size>(2,1)</size>
    <costList>
      <Steel>20</Steel>	  
      <Component>3</Component>
    </costList>
    <stuffCategories>
      <li>Woody</li>	  
    </stuffCategories>
    <costStuffCount>140</costStuffCount>	
    <interactionCellOffset>(0,0,1)</interactionCellOffset>
    <hasInteractionCell>true</hasInteractionCell>
    <terrainAffordanceNeeded>Heavy</terrainAffordanceNeeded>
    <designationCategory>Misc</designationCategory>
		<building>
			<ai_chillDestination>false</ai_chillDestination>
		</building>
    <comps>
      <li Class="CompProperties_Power">
        <compClass>CompPowerTrader</compClass>
        <startElectricalFires>true</startElectricalFires>
        <basePowerConsumption>200</basePowerConsumption>
      </li>
      <li Class="CompProperties_Flickable"/>
      <li Class="CompProperties_Breakdownable"/>
    </comps>
    <staticSunShadowHeight>0.5</staticSunShadowHeight>
    <designationHotKey>Misc3</designationHotKey>
    <researchPrerequisites>
      <li>Industrial_Telegraph</li>
    </researchPrerequisites>
  </ThingDef> 
  
</Defs>
